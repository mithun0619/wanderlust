<% layout("/layouts/boilerplate") %>
<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.5rem;
  }

  .filter {
    text-align: center;
    margin-right: 1rem;
    margin-top: 2rem;
    opacity: 0.8;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  filter p {
    font-size: 0.8rem;
  }

  .tax-toggle {
    margin-left: auto;
    margin-top: 2rem;
    border: 2px solid #333;
    padding: 0.75rem 1.5rem;
    border-radius: 25px;
    background-color: #fbfafa;
  }

  @media (max-width: 767.98px) {
    #filters {
      overflow-x: auto;
      flex-wrap: nowrap;
      padding-bottom: 0.5rem;
    }

    .filter {
      margin-top: 1rem;
      margin-right: 0.75rem;
      min-width: 70px;
    }

    .tax-toggle {
      display: none;
    }

    .mobile-tax-wrap {
      margin-top: 0.75rem;
      margin-bottom: 0.75rem;
    }

    .mobile-tax-card {
      border: 2px solid #333;
      border-radius: 999px;
      padding: 0.8rem 1rem;
      background-color: #fbfafa;
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 0.75rem;
      width: 100%;
      max-width: 380px;
    }

    .mobile-tax-card label {
      margin: 0;
      font-weight: 700;
      font-size: 1.05rem;
      color: #0f172a;
    }

    .mobile-tax-card .form-check-input {
      width: 2.5rem;
      height: 1.35rem;
      margin: 0;
      cursor: pointer;
    }
  }


</style>
