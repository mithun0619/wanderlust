  <% if (allListing.length === 0) { %>
    <div class="alert alert-info mt-4" role="alert">
      No listings found. Try a different search or category.
    </div>
  <% } else { %>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
      <% for(let listing of allListing){%>
        <a href="/listings/<%=listing._id%>" class="listing-link">
          <div class="card col listing-card" >
            <img src="<%=listing.image.url%>" class="card-img-top" alt="listing-image" style="height: 20rem" />
            <div class="card-img-overlay"></div>

            <div class="card-body">
              <p class="card-text" data-original-price="<%=listing.price%>">
                <b><%=listing.title%></b>
                <br />
                &#x20B9; <%=listing.price.toLocaleString("en-IN")%> / night
              </p>
            </div>
          </div>
        </a>
      <%}%>
    </div>
  <% } %>


        <script>
      // Category Filter Click Events
      document.querySelectorAll(".filter").forEach((filter) => {
        filter.addEventListener("click", function () {
          const category = this.getAttribute("data-category");
          window.location.href = `/listings/category/${category}`;
        });
      });

      function updatePrices(showWithTax) {
        const priceElements = document.querySelectorAll(".listing-card .card-text");
        priceElements.forEach((element) => {
          const originalPrice = parseInt(element.getAttribute("data-original-price"), 10);
          const b = element.querySelector("b");
          const title = b ? b.textContent : "";
          if (showWithTax) {
            const totalPrice = Math.round(originalPrice * 1.18);
            element.innerHTML = `<b>${title}</b><br />&#x20B9; ${totalPrice.toLocaleString("en-IN")} / night (incl. taxes)`;
          } else {
            element.innerHTML = `<b>${title}</b><br />&#x20B9; ${originalPrice.toLocaleString("en-IN")} / night`;
          }
          element.setAttribute("data-original-price", originalPrice);
        });
      }

      const taxSwitches = document.querySelectorAll(".tax-switch");
      taxSwitches.forEach((taxSwitch) => {
        taxSwitch.addEventListener("change", function () {
          const checked = this.checked;
          taxSwitches.forEach((siblingSwitch) => {
            siblingSwitch.checked = checked;
          });
          updatePrices(checked);
        });
      });
    </script>

